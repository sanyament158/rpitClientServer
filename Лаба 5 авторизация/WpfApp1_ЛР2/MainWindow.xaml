    <Grid Margin="0,1,0,-33" Background="Black">

        <TextBox x:Name="TB_URI" HorizontalAlignment="Left" Margin="606,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="474" Height="50" TextAlignment="Center" Background="#66FFFFFF" FontSize="16" FontWeight="Bold"/>
